	<erdc_version>2.4</erdc_version>
	<category>Operating System Monitors</category>
	<category_related>Storage Monitors</category_related>
	<grid_info>
		<supported_versions>7.3,7.4,7.5,7.6,7.7,7.8</supported_versions>
